{% extends 'admin/index.html.twig' %}

{% block admin_content %}
	<div class="container mt-5" style="max-width: 600px;">
		<div class="card shadow-lg border-0">
			<div class="card-header bg-success text-white text-center rounded-top">
				<h4 class="mb-0">✏️ Modifier le log</h4>
			</div>
			<div class="card-body p-4">
				{{ form_start(form) }}

				<div class="mb-3">
					{{ form_label(form.username, null, { label_attr: { class: 'form-label fw-bold' } }) }}
					{{ form_widget(form.username, { attr: { class: 'form-control' } }) }}
					{{ form_errors(form.username) }}
				</div>

				<div class="mb-3">
					{{ form_label(form.success, null, { label_attr: { class: 'form-label fw-bold' } }) }}
					{{ form_widget(form.success, { attr: { class: 'form-select' } }) }}
					{{ form_errors(form.success) }}
				</div>

				<div class="d-flex justify-content-between mt-4">
					<button class="btn btn-success w-50 me-2">✅ Enregistrer</button>
					<a href="{{ path('admin_logs') }}" class="btn btn-outline-secondary w-50 ms-2">↩️ Retour</a>
				</div>

				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}

