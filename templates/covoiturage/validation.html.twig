{% extends 'base.html.twig' %}

{% block title %}Validation du trajet
{% endblock %}

{% block body %}
	<main class="container py-5">
		<div class="bg-white p-4 rounded shadow-sm border border-success-subtle">
			<h2 class="text-success text-center mb-4">Validation du trajet ðŸš—</h2>

			<p class="text-center">
				<strong>Trajet :</strong>
				{{ trajet.lieuDepart }}
				â†’
				{{ trajet.lieuArrivee }}<br>
				<strong>Date :</strong>
				{{ trajet.dateDepart|date('d/m/Y') }}
			</p>

			<div class="row justify-content-center">
				<div class="col-md-8">
					{{ form_start(form) }}

					<div class="mb-4 text-center">
						{{ form_label(form.note) }}
						<div class="d-flex justify-content-center gap-3">
							{{ form_widget(form.note) }}
						</div>
						{{ form_errors(form.note) }}
					</div>

				<!-- âœ… Nouveau bloc pour trajetBienPasse -->
				<div class="mb-4">
					<label class="form-label fw-bold text-success d-block mb-3">Le trajet s'est-il bien passÃ© ?</label>

					<div class="d-flex justify-content-center gap-5">
						{{ form_widget(form.trajetBienPasse, {
							'attr': {
								'class': 'form-check-input'
							}
						}) }}
					</div>

					<div class="text-danger text-center mt-2">
						{{ form_errors(form.trajetBienPasse) }}
					</div>
				</div>
					<div class="mb-4">
						{{ form_label(form.commentaire) }}
						{{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'rows': 4}}) }}
						{{ form_errors(form.commentaire) }}
					</div>

					<div class="text-center">
						<button class="btn btn-success">âœ… Envoyer mon avis</button>
					</div>

					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</main>
{% endblock %}

