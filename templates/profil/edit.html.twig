{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil
{% endblock %}

{% block body %}
	<div class="container py-5" style="max-width: 700px;">
		<div class="bg-white p-4 rounded shadow-sm border border-success-subtle" style="background-color: #FBF8F7;">
			<h2 class="text-center mb-4 text-success">Modifier mes informations</h2>

			{% for message in app.flashes('success') %}
				<div class="alert alert-success text-center">
					{{ message }}
				</div>
			{% endfor %}

            <script>
                // Supprime l'alerte après 3 secondes
            setTimeout(function () {
            const alert = document.querySelector('.alert');
            if (alert) {
            alert.classList.remove('show');
            alert.classList.add('fade');
            setTimeout(() => alert.remove(), 300); // Supprime complètement du DOM
            }
            }, 3000);
            </script>


            {{ form_start(form) }}
            <div class="row gy-4">
                <div class="col-md-6">
                    <div class="form-group">
                    {{ form_label(form.photo, null, {'label_attr': {'class': 'mb-2 fw-semibold'}}) }}
                    {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.pseudo, null, {'label_attr': {'class': 'mb-2 fw-semibold'}}) }}
                        {{ form_widget(form.pseudo, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.email, null, {'label_attr': {'class': 'mb-2 fw-semibold'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.nom, null, {'label_attr': {'class': 'mb-2 fw-semibold'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.prenom, null, {'label_attr': {'class': 'mb-2 fw-semibold'}}) }}
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.telephone, null, {'label_attr': {'class': 'mb-2 fw-semibold'}}) }}
                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.dateNaissance, null, {'label_attr': {'class': 'mb-2 fw-semibold'}}) }}
                        {{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        {{ form_label(form.adresse, null, {'label_attr': {'class': 'mb-2 fw-semibold'}}) }}
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        {{ form_label(form.plainPassword, null, {'label_attr': {'class': 'mb-2 fw-semibold'}}) }}
                        {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4">Enregistrer</button>
                <a href="{{ path('app_profil') }}" class="btn btn-outline-secondary ms-2">Annuler</a>
            </div>
            {{ form_end(form) }}


		</div>
	</div>
{% endblock %}

