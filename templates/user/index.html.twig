{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5 bg-light">

		<div
			class="row">
			<!-- Inscription Form -->
			<div class="col-md-6 mb-4">
				<div class="form-section inscription p-4 bg-light rounded shadow-sm">
					<h1 class="text-center text-success">Inscription</h1>
					{% for child in form %}
						{% for error in child.vars.errors %}
							<div class="alert alert-danger">
								{{ error.message }}
							</div>
						{% endfor %}
					{% endfor %}

					{{ form_start(form, {'attr': {'class': 'form' }}) }}

					<div class="mb-3">
						{{ form_label(form.pseudo, null, {'attr': {'class': 'form-label text-success'}}) }}
						{{ form_widget(form.pseudo, {'attr': {'class': 'form-control border-success'}}) }}
					</div>

					<div class="mb-3">
						{{ form_label(form.email, null, {'attr': {'class': 'form-label text-success'}}) }}
						{{ form_widget(form.email, {'attr': {'class': 'form-control border-success'}}) }}


					</div>



					<div class="form-group mb-3">
						{{ form_label(form.password) }}
						{{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
						<div class="text-danger mt-1">
							{{ form_errors(form.password) }}
						</div>

					</div>


					<div class="mb-3">
						{{ form_label(form.nom, null, {'attr': {'class': 'form-label text-success'}}) }}
						{{ form_widget(form.nom, {'attr': {'class': 'form-control border-success'}}) }}
					</div>

					<div class="mb-3">
						{{ form_label(form.prenom, null, {'attr': {'class': 'form-label text-success'}}) }}
						{{ form_widget(form.prenom, {'attr': {'class': 'form-control border-success'}}) }}
					</div>

					<div class="mb-3">
						{{ form_label(form.telephone, null, {'attr': {'class': 'form-label text-success'}}) }}
						{{ form_widget(form.telephone, {'attr': {'class': 'form-control border-success'}}) }}
						<div class="text-danger mt-1">
							{{ form_errors(form.telephone) }}
						</div>
						


					</div>

					<div class="mb-3">
						{{ form_label(form.adresse, null, {'attr': {'class': 'form-label text-success'}}) }}
						{{ form_widget(form.adresse, {'attr': {'class': 'form-control border-success'}}) }}
					</div>

					<div class="mb-3">
						{{ form_label(form.date_naissance) }}
						{{ form_widget(form.date_naissance, { 'attr': {'class': 'form-control'} }) }}

						{% if form_errors(form.date_naissance) %}
							<div class="text-danger mt-1">
								{{ form_errors(form.date_naissance) }}
							</div>
						{% endif %}
					</div>


					<div class="d-grid gap-2">
						<button type="submit" class="btn btn-success">Connexion</button>
					</div>


					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/user.css') }}">
{% endblock %}
