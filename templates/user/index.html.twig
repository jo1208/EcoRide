{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
		<div class="card shadow p-4 bg-light" style="width: 100%; max-width: 550px;">
			<h2 class="text-center mb-4 text-success">Cr√©er un compte</h2>

			{{ form_start(form) }}

			<div class="mb-3">
				{{ form_label(form.pseudo, null, {'label_attr': {'class': 'form-label text-success'}}) }}
				{{ form_widget(form.pseudo, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="mb-3">
				{{ form_label(form.email, null, {'label_attr': {'class': 'form-label text-success'}}) }}
				{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
				{% if form_errors(form.email) %}
					<div class="text-danger mt-1">
						{{ form_errors(form.email) }}
					</div>
				{% endif %}
			</div>

			<div class="mb-3">
				{{ form_label(form.password, null, {'label_attr': {'class': 'form-label text-success'}}) }}
				{{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
				<div class="text-danger mt-1">{{ form_errors(form.password) }}</div>
			</div>

			<div class="mb-3">
				{{ form_label(form.nom, null, {'label_attr': {'class': 'form-label text-success'}}) }}
				{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="mb-3">
				{{ form_label(form.prenom, null, {'label_attr': {'class': 'form-label text-success'}}) }}
				{{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="mb-3">
				{{ form_label(form.telephone, null, {'label_attr': {'class': 'form-label text-success'}}) }}
				{{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
				<div class="text-danger mt-1">{{ form_errors(form.telephone) }}</div>
			</div>

			<div class="mb-3">
				{{ form_label(form.adresse, null, {'label_attr': {'class': 'form-label text-success'}}) }}
				{{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="mb-3">
				{{ form_label(form.date_naissance, null, {'label_attr': {'class': 'form-label text-success'}}) }}
				{{ form_widget(form.date_naissance, {'attr': {'class': 'form-control'}}) }}
				<div class="text-danger mt-1">{{ form_errors(form.date_naissance) }}</div>
			</div>

			<div class="d-grid">
				<button type="submit" class="btn text-white" style="background-color: #28a745;">S'inscrire</button>
			</div>

			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/user.css') }}">
{% endblock %}

